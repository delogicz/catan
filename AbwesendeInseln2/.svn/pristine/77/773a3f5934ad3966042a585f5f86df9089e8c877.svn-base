	private void checkBots() {
		for (Player player:players){
			if(player.isBot() ){
			bots.add(player);
			System.out.print(player.getName()+ "");
			}
		}
	}
	
	private void activateBots() {
		for (Player bot:bots){
			bot.activateBot();
			}
	}
		
	private void brodcastPlayer() {
		for (Player player: players){
			((PlayerClient)player).setCurrentTurnTaker(currentTurnTaker);
		
	}
		
