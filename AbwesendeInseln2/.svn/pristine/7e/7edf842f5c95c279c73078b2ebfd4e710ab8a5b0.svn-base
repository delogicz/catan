	/**
	 * Sends message that a trade got cancelled
	 * @param tradeId
	 * @param clientId
	 */
	public void sendCancelledTrade(int tradeId, int clientId) {
		String text = "{\"Handelsangebot abgebrochen\":{\"Spieler\":"+
				clientId+",\"Handel id\":"+tradeId+"}}";
		sendToAll(text);
	}
	
